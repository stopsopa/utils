<!DOCTYPE HTML>
<html lang="en-US">
<head>
    <meta charset="UTF-8">
    <title></title>
    {% block css %}
        <style type="text/css">
            .container {
                width: 500px;
                margin: auto;
            }
            table {
                width: 100%;
            }
            td {
               border: 1px solid gray;
            }
            .r {
                float: right;
            }
            .clear {
                clear: both;
            }
            .alert {
                border: 1px solid black;
                text-align: center;
            }
        </style>
    {% endblock %}
</head>
<body>
    <div class="container">
        {% for message in app.session.flashbag.get('notice') %}
            <div class="alert">
                {{ message }}
            </div>
        {% endfor %}

        <a href="{{ path('test-upload') }}">
            {% if app.request.get('_route') == 'test-upload' %}
                refresh
            {% else %}
                index
            {% endif %}
        </a>
        {% block body %}
        {% endblock %}
    </div>


    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
    <script>window.jQuery || document.write('<script src="//jquery.com/jquery-wp-content/themes/jquery/js/jquery-1.11.2.min.js"><\/script>')</script>

    <script src="/bundles/stopsopautils/forms/form.collection.js"></script>

    {% block js %}
    {% endblock %}

    {% include 'StopsopaUtilsBundle::browsersync.html.twig' %}
</body>
</html>